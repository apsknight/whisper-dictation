# AWS Bedrock Configuration
# Copy this file to .env and fill in your AWS credentials

# AWS Credentials
AWS_PROFILE=default

# AWS Region where Bedrock is available
AWS_REGION=us-west-2

# Bedrock Model ID to use for text enhancement
BEDROCK_MODEL_ID=us.anthropic.claude-sonnet-4-20250514-v1:0

# Whisper Inference Configuration
# Options: "local" (default) or "sagemaker"
WHISPER_INFERENCE_MODE=local

# SageMaker Configuration (only needed if WHISPER_INFERENCE_MODE=sagemaker)
# SageMaker endpoint name for Whisper inference
SAGEMAKER_ENDPOINT_NAME=whisper-inference

# Logging Configuration
# LOG_LEVEL options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Set to true to disable colored output (useful for log files, CI/CD)
NO_COLOR=false